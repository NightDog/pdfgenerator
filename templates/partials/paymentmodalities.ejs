<div class="paymentinfo">
	<strong>MODALITES DE PAIEMENT</strong>
    <div class="columns">
        <div>
            ­<br><u>Par virement bancaire</u>
            <br>Nos coordonnées bancaires
            <br><%= landlord.bankInfo.name %>
            <br>IBAN : <%= landlord.bankInfo.iban %>
            <br> &nbsp;
            <br><u>Par espèce</u>
            <br>Contactez <%= landlord.contacts[0].name %>
            <br>Tél : <%= landlord.contacts[0].phone1 %> <%= landlord.contacts[0].phone2 ? ' - '+landlord.contacts[0].phone2:'' %>
            <br>E-mail : <%= landlord.contacts[0].email %>
        </div>
        <div>
            <br><u>Par chèque bancaire ou postal</u>
            <% if (landlord.isCompany) { %>
                <br>Etablissez votre chèque à l'ordre de la <%= landlord.companyInfo.legalStructure+' '+landlord.name %> et à envoyer à l'adresse suivante :
            <% } else { %>
                <br>Etablissez votre chèque à l'ordre de la <%= landloard.stakeholder.name %> et à envoyer à l'adresse suivante :
            <% } %>
            <br><%= landlord.addresses[0].street1 %>
            <% if (landlord.addresses[0].street2) { %>
            <br><%= landlord.addresses[0].street2 %>
            <% } %>
            <br><%= landlord.addresses[0].zipCode %> <%= landlord.addresses[0].city %>
            <% if (landlord.addresses[0].state) { %>
            <br><%= landlord.addresses[0].state %>
            <% } %>
            <% if (landlord.addresses[0].country) { %>
            <br><%= landlord.addresses[0].country %>
            <% } %>
        </div>
    </div>
</div>
