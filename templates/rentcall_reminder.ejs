<!DOCTYPE html>
<html>
	<%- include partials/htmlhead.ejs %>
	<body>
		<% rents.forEach(function(rent) { %>
			<div class="page">
				<%- include partials/header.ejs %>

				<%- include partials/customeraddress.ejs %>

				<%- include partials/customerreference.ejs %>

				<%- include partials/placeanddate.ejs %>

				<div class="title">Avis d'échéance</div>

				<div class="limit">
					Montant total de <strong><%= rent.total.grandTotal.toFixed(2) %> euros</strong> à nous faire parvenir avant le <strong><%= rent.dueDate %></strong>.
				</div>

				<div class="items">
					<table>

					<%- include partials/invoicebody %>

					<%- include partials/rentcalltotal %>

					</table>
				</div>

				<%- include partials/paymentmodalities %>

				<%- include partials/footer %>
			</div>
		<% }); %>
	</body>
</html>
